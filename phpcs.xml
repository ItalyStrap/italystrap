<?xml version="1.0"?>
<ruleset name="ItalyStrap code style" >
    <description>
        A customization of the the PSR-2 coding standard to stick with both Codeception and WordPress coding standards.
    </description>

    <arg name="tab-width" value="4" />

    <arg name="colors"/>

    <!-- Use WPTRTCS: https://github.com/WPTRT/WPThemeReview. -->
<!--    <rule ref="WPThemeReview">-->
<!--        <config name="testVersion" value="7.2-"/>-->
<!--    </rule>-->

    <!-- Exclude files and folders. -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>

    <!-- Only check the PHP files. -->
    <arg name="extensions" value="php"/>

    <!-- Check PHP version compatibility. -->
    <rule ref="PHPCompatibilityWP"/>
    <config name="testVersion" value="7.2-"/>

    <!-- Set textdomains. -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="italystrap"/>
            </property>
        </properties>
    </rule>

