{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "clamp(16rem, 60vw, 60rem)",
            "wideSize": "clamp(16rem, 85vw, 70rem)"
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--base)",
            "fontSize": "18px",
            "fontStyle": "normal",
            "fontWeight": "300",
            "letterSpacing": "normal",
            "lineHeight": "var(--wp--custom--line-height--m)",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "blocks": {
            "core/site-logo": {
                "spacing": {
                    "margin": "0 0 0 0",
                    "padding": "0 0 0 0"
                }
            },
            "core/image": {
                "spacing": {
                    "margin": "1rem 0 0px 0"
                }
            },
            "core/post-featured-image": [],
            "core/post-title": {
                "color": {
                    "text": "inherit"
                },
                "typography": {
                    "fontSize": "35px"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "inherit",
                            "background": "transparent"
                        }
                    }
                }
            },
            "core/post-date": {
                "typography": []
            },
            "core/post-author": {
                "typography": []
            },
            "core/post-terms": {
                "typography": []
            },
            "core/post-content": {
                "color": {
                    "text": "inherit"
                }
            },
            "core/post-excerpt": {
                "color": {
                    "text": "inherit"
                }
            },
            "core/paragraph": {
                "color": {
                    "text": "inherit"
                },
                "spacing": {
                    "margin": "1.2rem 0 0px 0"
                }
            }
        }
    }
}
